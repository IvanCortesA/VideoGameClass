import javafx.application.Application;
import javafx.stage.Stage;
import javafx.scene.Scene;
import javafx.scene.control.Label;
import javafx.scene.control.Button;
import javafx.scene.layout.VBox;
import javafx.scene.control.Menu;
import javafx.geometry.Pos;
import javafx.event.EventHandler;
import javafx.event.ActionEvent;
import javafx.scene.layout.*;
import javafx.scene.control.*;
import javafx.scene.control.Alert.AlertType;
import java.time.LocalDate;

public class Main extends Application 
{ 
  
  @Override
  public void start(Stage GameMenu) {
    int ManaPotions=5, HealPotions=5, PlayerAttack=1, PeaceMeter=0, Health=25, Mana=50;
    Label label = new Label("Battle Menu"); 
    Menu Actions= new Menu("Actions"), Items= new Menu("Items"), Spells= new Menu("Spells"), Options= new Menu("Options");
    Scene scene;
    VBox vbox;
    
    MenuBar mb = new MenuBar();
    //Actions Menu
    mb.getMenus().add(Actions);
    MenuItem Attack = new MenuItem("Attack"), Talk = new MenuItem("Talk");
    Actions.getItems().add(Attack);
    Actions.getItems().add(Talk);
    //Items Menu
    mb.getMenus().add(Items);
    MenuItem Heal=new MenuItem("Heal Potion"), Recharge = new MenuItem("Mana Potion");
    Items.getItems().add(Heal);
    Items.getItems().add(Recharge);
    //Spells Menu
    mb.getMenus().add(Spells);
    MenuItem ; //add spells here
    //Options Menu
    mb.getMenus().add(Options);
    MenuItem Quit= new MenuItem("Quit");

    
    vbox = new VBox(label,mb);
    vbox.setSpacing(20);
    vbox.setAlignment(Pos.CENTER);
    scene = new Scene (vbox, 300, 200);
    GameMenu.setTitle("Battle game");
    GameMenu.setScene(scene);
    GameMenu.show();
  } 
    
  public static void main(String[] args) {
    launch(args);
  }
} 
